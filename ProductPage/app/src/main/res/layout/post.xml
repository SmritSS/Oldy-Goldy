<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Label for Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_item"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Spinner for item selection -->
        <Spinner
            android:id="@+id/itemSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Label for Caption -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caption1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Caption Input -->
        <EditText
            android:id="@+id/captionInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/enter_caption"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Label for Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Price Input -->
        <EditText
            android:id="@+id/priceInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/enter_price"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Label for Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Description Input -->
        <EditText
            android:id="@+id/descriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_description"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top" />

        <!-- Label for Image Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selected_image"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- ImageView for displaying the selected image -->
        <ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/selected_image_preview" />

        <!-- Button to add an image -->
        <Button
            android:id="@+id/addImageButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/add_image"
            android:layout_marginBottom="16dp" />

        <!-- Button to post -->
        <Button
            android:id="@+id/postButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/post1"
            android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
